@model IEnumerable<SmartphoneStore.Web.Models.SmartphoneViewModel>
@{
    ViewBag.Title = "List";
}

<h2>Smartphones</h2>

@foreach (var smartphone in Model)
{
    <div class="row">
        <div class="col-md-4">
            <img src="@smartphone.ImageUrl" width="304" height="236" />
        </div>
        <div class="col-md-4">
            <h3>@smartphone.Manufacturer @smartphone.Model</h3>
        </div>
        <div class="col-md-4">
            <p><a class="btn btn-info" href="@Url.Action("Details","Smartphones",new { smartphone.Id })">Price: @smartphone.Price</a></p>
        </div>
    </div>
}

<br />

@for (int i = 1; i <= ViewBag.Pages; i++)
{
    <a href="@Url.Action("List",new { id = i })">@i</a>
}